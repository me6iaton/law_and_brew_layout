doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title Law & Brew
    link(rel='stylesheet', href='styles.css')
    //- meta(content='width=device-width, initial-scale=1', name='viewport')
  body
    .top-bg.top-bg--left
      img(src='images/big/optimizilla/img-09-min.png', alt='')
    .top-bg.top-bg--right
      img(src='images/big/optimizilla/img-10-min.png', alt='')  
    .menu
      .menu__top-space
      .menu__fixed
        .container
          .menu__container
            a.menu__item(href='#ancor_top')
              span.visible--lg-inline-block Viva la
              span &nbsp;craft
            a.menu__item(href='#ancor_beer')
              | Наше пиво
            a.menu__item(href='#ancor_process')
              | Процесс
            .menu__header
              include /svg/menu_header.svg
            a.menu__item(href='#ancor_about')
              | О нас
            a.menu__item(href='#ancor_contacts')
              | Контакты
            a.button(href='#ancor_order')
              | Попробовать                   
    include /jade/ancor_top.jade
    include /jade/ancor_beer.jade
    include /jade/ancor_process.jade
    //- #ancor_about
    .container
      .about
        .about__col
          include /jade/ancor_about.jade
          include /jade/ancor_contacts.jade
        .about__col
          .about__fixed
            .about__citation-container
              .about__citation
                h4 Напоминаем! 
                p.paragraph
                  | Чрезмерное употребление алкоголя <br> вредит вашему здоровью!
                .about__quote
                  include /svg/quote.svg
              .about__attention
                include /svg/attention.svg
            img.about__photo(src="images/big/optimizilla/photo-brewers-min.png")                                                
    script(src="./scripts/InteractiveParticlesSlideshow/js/modernizr.custom.js")
    script(src="./scripts/InteractiveParticlesSlideshow/js/particlesSlideshow.js")
    script(src="./bower_components/jquery/dist/jquery.min.js")
    script(src="./bower_components/jquery-easing-original/jquery.easing.min.js")
    script(src="./scripts/jquery.stickyNavbar.js")
    script(src="./scripts/affix.js")
    script(src="./index.js")
